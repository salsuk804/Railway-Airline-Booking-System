                        cout << "No Fly Jinnah flights available" << endl;
                    }
                    if (PIA == 0) {
                        cout << "No PIA flights available" << endl;
                    }
                    
                }
                if (FilterChoice == 2) {
                    string dest;
                    int PIA = 0;
                    int FJ = 0;
                    cout << "Enter your destination: ";
                    cin >> dest;
                    cout << endl;

                    for (int i = 0; i < 3; i++) {
                        string x;
                        x = PIA_Cities[i];
                        if (x == dest) {
                            cout << "PIA: " << "Lahore-" << PIA_Cities[i] << " | Cost: " << PIA_Cost[i] << endl;
                            PIA++;
                        }
                    }
                    for (int i = 0; i < 3; i++) {
                        string x;
                        x = FLY_J_Citites[i];
                        if (x == dest) {
                            cout << "Fly Jinnah: " << "Lahore-" <<FLY_J_Citites[i] << " | Cost: " <<    FLY_J_Cost[i] << endl;
                            FJ++;
                        }
                    }

                    if (PIA == 0) {
                        cout << "No PIA flights available" << endl;
                    }
                    if (FJ == 0) {
                        cout << "No Fly Jinnah flights available" << endl;
                    }
                }
                else {
                    cout << "Invalid Input"<<endl;
                }

            }
            if (transportMode == 2) {

                cout << "Press 1: Filter by time" << endl;
                cout << "Press 2: Filter by destination" << endl;
                cout << "Enter your choice: ";
                cin >> FilterChoice;

                if (FilterChoice == 1) {
                    string time;
                    int Pak = 0;
                    int Fast = 0;
                    cout << "Enter time in 24 hour format: ";
                    cin >> time;
                    cout << endl;

                    for (int i = 0; i < 3; i++) {
                        string x;
                        string b;
                        x = PakExpress_Departure[i];
                        b = b + x[0] + x[1];
                        cout << endl;
                        if (b == time) {
                            cout << "Pakistan Express: " << "Lahore-" << PakExpress_Cities[i] << " | Cost: " << PakExpress_Cost[i] << endl;
                            Pak++;
                        }
                    }
                    for (int i = 0; i < 3; i++) {
                        string x;
                        string b;

                        x = FastExpress_Departure[i];
                        b = b + x[0] + x[1];
                        cout << endl;
                        if (b == time) {
                            cout << "Fast Express: " << "Lahore-" << FastExpress_Cities[i] << " | Cost: " << FastExpress_Cost[i] << endl;
                            Fast++;
                        }

                    }
                    if (Pak == 0) {
                        cout << "No Pakistan Express trains available" << endl;
                    }
                    if (Fast == 0) {
                        cout << "No Fast Express trains available" << endl;
                    }

                }
                if (FilterChoice == 2) {
                    string dest;
                    int Pak = 0;
                    int Fast = 0;
                    cout << "Enter your destination: ";
                    cin >> dest;
                    cout << endl;

                    for (int i = 0; i < 3; i++) {
                        string x;
                        x = PakExpress_Cities[i];
                        if (x == dest) {
                            cout << "Pakistan Express: " << "Lahore-" << PakExpress_Cities[i] << " | Cost: " << PakExpress_Cost[i] << endl;
                            Pak++;
                        }
                    }
                    for (int i = 0; i < 3; i++) {
                        string x;
                        x = FastExpress_Cities[i];
                        if (x == dest) {
                            cout << "Fast Express: " << "Lahore-" << FastExpress_Cities[i] << " | Cost: " << FastExpress_Cost[i] << endl;
                            Fast++;
                        }
                    }

                    if (Pak == 0) {
                        cout << "No Pakistan Express trains available" << endl;
                    }
                    if (Fast == 0) {
                        cout << "No Fast Express trains available" << endl;
                    }
                }
                else {
                    cout << "Invalid Input" << endl;
                }

            }
        }
           
        if (choice == 7) {
            for (int i = 0; i < counter; i++) {
                cout << passName[i] << " : " << recentBooking[i] << endl;
            }
        }


    } while (choice != 8);

   

}
